{
  "name": "search-for-books",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "dev:docker": "docker compose -f docker-compose-dev.yml -p dockerdev up",
    "build:docker": "docker compose -f docker-compose-build.yml -p dockerbuild up",
    "lint:ts": "eslint \"**/*.{ts,tsx,js,cjs}\"",
    "lint:ts:fix": "eslint \"**/*.{ts,tsx,js,cjs}\" --fix",
    "test:unit": "jest --config=./config/jest/config/jest.config.ts",
    "test:e2e": "cypress open",
    "preview": "vite preview",
    "prepare": "husky install"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.5",
    "i18next": "^23.4.9",
    "i18next-browser-languagedetector": "^7.1.0",
    "i18next-http-backend": "^2.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^13.2.2",
    "react-redux": "^8.1.2",
    "react-router-dom": "^6.15.0",
    "vite-plugin-svgr": "^3.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.9",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "cypress": "^13.1.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-i18next": "^6.0.3",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.6.4",
    "jest-environment-jsdom": "^29.6.4",
    "jest-html-reporters": "^3.1.4",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "sass": "^1.66.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "whatwg-fetch": "^3.6.18"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint \"**/*.{ts,tsx,js,cjs}\""
    ]
  }
}
